<div class="container">
        <div class="form-box">
            <h1 id="title">CEU ARCH</h1>
            <form>
                <img src="/assets/images/logo.png" alt="CEU Logo"/>
                <div class="btn-field">
                    <% if current_user %>
                        <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>
